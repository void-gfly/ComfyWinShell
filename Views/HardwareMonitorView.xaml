<UserControl x:Class="WpfDesktop.Views.HardwareMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfDesktop.Views"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Compact Styles for High Density Dashboard -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>

        <Style x:Key="CompactProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="3"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15,10">
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="硬件监控" FontSize="20" FontWeight="Bold"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="自动刷新" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.6"/>
                    <CheckBox IsChecked="{Binding IsMonitoring}" VerticalAlignment="Center"/>
                    <Button Content="刷新" Command="{Binding RefreshCommand}" Margin="12,0,0,0" Padding="10,2" FontSize="12"/>
                </StackPanel>
            </Grid>

            <!-- CPU Section -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding CpuName}" Style="{StaticResource SectionTitleStyle}"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- CPU Load -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="使用率" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding CpuLoadText}" Style="{StaticResource MetricValueStyle}"/>
                            <ProgressBar Value="{Binding CpuLoad, TargetNullValue=0}" Maximum="100"
                                         Style="{StaticResource CompactProgressBarStyle}" Foreground="#4CAF50"/>
                        </StackPanel>

                        <!-- CPU Temperature -->
                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <TextBlock Text="温度" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding CpuTemperatureText}" Style="{StaticResource MetricValueStyle}"/>
                        </StackPanel>

                        <!-- CPU Fan -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="风扇转速" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding CpuFanText}" Style="{StaticResource MetricValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- GPU Section -->
            <ItemsControl ItemsSource="{Binding Gpus}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="{Binding Name}" Style="{StaticResource SectionTitleStyle}"/>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="使用率" Style="{StaticResource MetricLabelStyle}"/>
                                        <TextBlock Text="{Binding LoadText}" Style="{StaticResource MetricValueStyle}"/>
                                        <ProgressBar Value="{Binding Load, TargetNullValue=0}" Maximum="100"
                                                     Style="{StaticResource CompactProgressBarStyle}" Foreground="#2196F3"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                        <TextBlock Text="温度" Style="{StaticResource MetricLabelStyle}"/>
                                        <TextBlock Text="{Binding TemperatureText}" Style="{StaticResource MetricValueStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="风扇转速" Style="{StaticResource MetricLabelStyle}"/>
                                        <TextBlock Text="{Binding FanText}" Style="{StaticResource MetricValueStyle}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- GPU Memory -->
                                <StackPanel Grid.Row="2" Margin="0,12,0,0">
                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="显存" FontSize="11" Opacity="0.5"/>
                                        <TextBlock Grid.Column="2" Text="{Binding MemoryText}" FontSize="11" FontWeight="Medium"/>
                                    </Grid>
                                    <ProgressBar Value="{Binding MemoryPercent, Mode=OneWay}" Maximum="100"
                                                 Height="3" Foreground="#FF9800" BorderThickness="0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Memory Section -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="内存" Style="{StaticResource SectionTitleStyle}"/>

                    <StackPanel Grid.Row="1">
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="使用量" FontSize="11" Opacity="0.5"/>
                            <TextBlock Grid.Column="2" Text="{Binding MemoryText}" FontSize="11" FontWeight="Medium"/>
                        </Grid>
                        <ProgressBar Value="{Binding MemoryPercent, Mode=OneWay}" Maximum="100"
                                     Height="3" Foreground="#9C27B0" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Last Update -->
            <TextBlock HorizontalAlignment="Right" Opacity="0.3" FontSize="10" Margin="0,5,0,10">
                <Run Text="最后更新: "/>
                <Run Text="{Binding LastUpdateTime}"/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>