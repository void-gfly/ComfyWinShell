<UserControl x:Class="WpfDesktop.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WpfDesktop.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance vm:SettingsViewModel}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="#050505">
        <StackPanel Margin="80,60,80,60" MaxWidth="1000" HorizontalAlignment="Left">

            <!-- Header -->
            <TextBlock Text="设置" FontSize="32" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock Text="管理 ComfyShell 的外观、行为与存储配置" FontSize="16" Opacity="0.6" Margin="0,0,0,40"/>

            <!-- General Section -->
            <TextBlock Text="常规" FontSize="18" FontWeight="SemiBold"
                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,20"/>

            <!-- App Name -->
            <StackPanel Margin="0,0,0,25">
                <TextBlock Text="应用程序名称" FontSize="14" FontWeight="Medium" Opacity="0.7" Margin="0,0,0,8"/>
                <TextBox Text="{Binding Settings.AppName, UpdateSourceTrigger=PropertyChanged}"
                         Width="250" HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"/>
                <TextBlock Text="自定义窗口标题显示的名称"
                           FontSize="12" Opacity="0.5" Margin="0,6,0,0"/>
            </StackPanel>

            <Grid Margin="0,0,0,50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Language -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="界面语言" FontSize="14" FontWeight="Medium" Opacity="0.7" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding LanguageOptions}"
                              SelectedItem="{Binding Settings.Language}"/>
                    <TextBlock Text="应用程序的主要显示语言"
                               FontSize="12" Opacity="0.5" Margin="0,6,0,0"/>
                </StackPanel>

                <!-- Theme -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="颜色主题" FontSize="14" FontWeight="Medium" Opacity="0.7" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding ThemeOptions}"
                              SelectedItem="{Binding Settings.Theme}"/>
                    <TextBlock Text="选择深色或浅色界面风格"
                               FontSize="12" Opacity="0.5" Margin="0,6,0,0"/>
                </StackPanel>
            </Grid>

            <Border Height="1" Opacity="0.3" Margin="0,0,0,50"
                    Background="#2A2A2A"/>

            <!-- Console Section -->
            <TextBlock Text="控制台" FontSize="18" FontWeight="SemiBold"
                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,50">
                <TextBlock Text="最大日志行数" FontSize="14" FontWeight="Medium" Opacity="0.7" Margin="0,0,0,8"/>
                <TextBox Text="{Binding Settings.MaxLogLines, UpdateSourceTrigger=PropertyChanged}"
                         Width="150" HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"/>
                <TextBlock Text="控制台输出保留的最大行数，超出后自动删除旧日志。默认 5000 行。"
                           FontSize="12" Opacity="0.5" Margin="0,6,0,0"/>
            </StackPanel>

            <Border Height="1" Opacity="0.3" Margin="0,0,0,50"
                    Background="#2A2A2A"/>

            <!-- Storage Section -->
            <TextBlock Text="存储与路径" FontSize="18" FontWeight="SemiBold"
                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,60">
                <TextBlock Text="ComfyUI 数据根目录" FontSize="14" FontWeight="Medium" Opacity="0.7" Margin="0,0,0,8"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding Settings.DataRoot, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center"/>

                    <Button Grid.Column="2"
                            Command="{Binding BrowseDataRootCommand}"
                            Content="浏览文件夹..."
                            Style="{DynamicResource SecondaryButtonStyle}"/>
                </Grid>

                <TextBlock Text="此目录用于存储所有模型、节点、工作流及生成的图像。更改后可能需要重启应用。"
                           FontSize="12" Opacity="0.5" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Footer Action -->
            <Button Command="{Binding SaveCommand}"
                    Content="保存配置"
                    Style="{DynamicResource PrimaryButtonStyle}"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>
