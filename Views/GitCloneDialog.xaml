<Window x:Class="WpfDesktop.Views.GitCloneDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="安装 ComfyUI-Manager"
        Width="600"
        Height="400"
        MinWidth="500"
        MinHeight="300"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        Background="#1E1E1E">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0"
                   Text="正在从 GitHub 克隆 ComfyUI-Manager..."
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#D4AF37"
                   Margin="0,0,0,12"/>

        <!-- 仓库信息 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Foreground="#888888" FontSize="12">
                <Run Text="仓库: "/>
                <Run Text="{Binding GitUrl, Mode=OneWay}" Foreground="#AAAAAA"/>
            </TextBlock>
            <TextBlock Foreground="#888888" FontSize="12">
                <Run Text="目标: "/>
                <Run Text="{Binding TargetPath, Mode=OneWay}" Foreground="#AAAAAA"/>
            </TextBlock>
        </StackPanel>

        <!-- 输出日志 -->
        <Border Grid.Row="2"
                Background="#0D0D0D"
                BorderBrush="#333333"
                BorderThickness="1"
                CornerRadius="4">
            <ScrollViewer x:Name="LogScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox"
                         Text="{Binding LogOutput, Mode=OneWay}"
                         IsReadOnly="True"
                         Background="Transparent"
                         Foreground="#CCCCCC"
                         BorderThickness="0"
                         FontFamily="Consolas, Courier New"
                         FontSize="12"
                         TextWrapping="Wrap"
                         Padding="8"
                         VerticalScrollBarVisibility="Disabled"
                         TextChanged="LogTextBox_TextChanged"/>
            </ScrollViewer>
        </Border>

        <!-- 底部按钮区域 -->
        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 状态指示 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="StatusIndicator"
                           Text="●"
                           FontSize="14"
                           Foreground="{Binding StatusColor, Mode=OneWay}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <TextBlock Text="{Binding StatusText, Mode=OneWay}"
                           Foreground="#AAAAAA"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- 按钮 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="CancelButton"
                        Content="取消"
                        Width="80"
                        Height="32"
                        Margin="0,0,8,0"
                        Click="CancelButton_Click"
                        IsEnabled="{Binding CanCancel, Mode=OneWay}"/>
                <Button x:Name="CloseButton"
                        Content="关闭"
                        Width="80"
                        Height="32"
                        Click="CloseButton_Click"
                        IsEnabled="{Binding IsCompleted, Mode=OneWay}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
