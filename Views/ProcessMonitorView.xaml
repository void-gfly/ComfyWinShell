<UserControl x:Class="WpfDesktop.Views.ProcessMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#050505">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Grid Grid.Row="0" Margin="24,20,24,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 搜索过滤 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="过滤:" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0.6"/>
                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                         Width="300"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- 自动滚动 CheckBox -->
                <CheckBox Content="自动滚动"
                          IsChecked="{Binding AutoScroll}"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"/>

                <!-- 检测环境按钮 -->
                <Button Command="{Binding CheckEnvironmentCommand}"
                        Content="检测环境"
                        Height="32"
                        Padding="16,0"
                        IsEnabled="{Binding IsCheckingEnvironment, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{DynamicResource AccentButtonStyle}"
                        Margin="0,0,10,0">
                    <Button.ToolTip>
                        <TextBlock>
                            <Run Text="检测 ComfyUI 运行环境"/><LineBreak/>
                            <Run Text="• Python 版本 (>= 3.10)"/><LineBreak/>
                            <Run Text="• PyTorch 可用性"/><LineBreak/>
                            <Run Text="• CUDA/ROCm 支持"/><LineBreak/>
                            <Run Text="• FFmpeg 可用性"/><LineBreak/>
                            <Run Text="• Git 可用性"/>
                        </TextBlock>
                    </Button.ToolTip>
                </Button>

                <!-- 清空日志按钮 -->
                <Button Command="{Binding ClearLogsCommand}"
                        Content="清空日志"
                        Height="32"
                        Padding="16,0"
                        Style="{DynamicResource DangerButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- 日志列表 -->
        <Border Grid.Row="1" Margin="24,0,24,24" CornerRadius="4">
            <ListBox x:Name="LogListBox"
                     ItemsSource="{Binding Logs}"
                     SelectionMode="Extended"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     Padding="8">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="MinHeight" Value="0"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="复制选中日志"
                                  Command="{Binding CopySelectedLogsCommand}"
                                  CommandParameter="{Binding PlacementTarget.SelectedItems, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        <MenuItem Header="复制全部日志" Command="{Binding CopyAllLogsCommand}"/>
                        <Separator/>
                        <MenuItem Header="清空日志" Command="{Binding ClearLogsCommand}"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FormattedMessage}"
                                   Foreground="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}"
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas, Courier New, Monospace"
                                   FontSize="13"
                                   LineStackingStrategy="BlockLineHeight"
                                   LineHeight="{Binding DataContext.LogLineHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</UserControl>
