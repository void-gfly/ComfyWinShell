<UserControl x:Class="WpfDesktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfDesktop.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="BorderBrush" Value="#262626"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,4"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15,10">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="仪表盘" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- Section 1: Active Environment -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="当前环境" Style="{StaticResource SectionTitleStyle}"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="90"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Active Version -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ComfyUI 版本" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ActiveVersionName}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource ValueStyle}">
                                    <Setter Property="Foreground" Value="#CCCCCC"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsComfyUiFound}" Value="False">
                                            <Setter Property="Foreground" Value="#FF453A"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Active Profile -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="当前配置" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ActiveProfileName}" Style="{StaticResource ValueStyle}"/>

                        <!-- Python Path -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Python 环境" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ActivePythonPath}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource ValueStyle}">
                                    <Setter Property="Foreground" Value="#CCCCCC"/>
                                    <Setter Property="Opacity" Value="0.6"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPythonValid}" Value="False">
                                            <Setter Property="Foreground" Value="#FF453A"/>
                                            <Setter Property="Opacity" Value="1"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Path -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="路径" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ActiveVersionPath}">
                             <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource ValueStyle}">
                                    <Setter Property="Foreground" Value="#CCCCCC"/>
                                    <Setter Property="Opacity" Value="0.6"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsComfyUiFound}" Value="False">
                                            <Setter Property="Foreground" Value="#FF453A"/>
                                            <Setter Property="Opacity" Value="1"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>

            <!-- Section 2: Launch Command -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="启动命令预览" Style="{StaticResource SectionTitleStyle}"/>
                    
                    <TextBox Grid.Row="1" Text="{Binding GeneratedCommand, Mode=OneWay}"
                             IsReadOnly="True" TextWrapping="Wrap"
                             Background="#0A0A0A" BorderThickness="0" Padding="8"
                             Foreground="#AAAAAA" FontFamily="Consolas, Courier New, Monospace" FontSize="11"/>
                </Grid>
            </Border>

            <!-- Section 3: Quick Access -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="快速访问" Style="{StaticResource SectionTitleStyle}"/>
                    <WrapPanel Orientation="Horizontal">
                        <Button Content="input 目录" Command="{Binding OpenFolderCommand}" CommandParameter="input"
                                Margin="0,0,8,8" Padding="12,5" FontSize="12"/>
                        <Button Content="output 目录" Command="{Binding OpenFolderCommand}" CommandParameter="output"
                                Margin="0,0,8,8" Padding="12,5" FontSize="12"/>
                        <Button Content="model 目录" Command="{Binding OpenFolderCommand}" CommandParameter="models"
                                Margin="0,0,8,8" Padding="12,5" FontSize="12"/>
                        <Button Content="工作流目录" Command="{Binding OpenFolderCommand}" CommandParameter="user/default/workflows"
                                Margin="0,0,8,8" Padding="12,5" FontSize="12"/>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
