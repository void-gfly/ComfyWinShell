<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Accent Color - 金黄色主题色 -->
    <Color x:Key="AccentColor">#FFB300</Color>
    <Color x:Key="AccentHoverColor">#FFC107</Color>
    <Color x:Key="AccentPressedColor">#E6A000</Color>

    <!-- 自定义画刷 -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource AccentPressedColor}"/>

    <!-- 兼容旧代码的画刷别名 - 使用 Fluent 主题系统资源 -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#050505"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#141414"/>
    <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>

</ResourceDictionary>
