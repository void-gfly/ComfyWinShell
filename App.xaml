<Application x:Class="WpfDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfDesktop"
             xmlns:viewmodels="clr-namespace:WpfDesktop.ViewModels"
             xmlns:views="clr-namespace:WpfDesktop.Views"
             xmlns:converters="clr-namespace:WpfDesktop.Converters"
             ThemeMode="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:LogLevelToColorConverter x:Key="LogLevelToColorConverter"/>

            <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
                <views:DashboardView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:ConfigurationViewModel}">
                <views:ConfigurationView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:VersionManagerViewModel}">
                <views:VersionManagerView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:ProfileManagerViewModel}">
                <views:ProfileManagerView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:ProcessMonitorViewModel}">
                <views:ProcessMonitorView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:HardwareMonitorViewModel}">
                <views:HardwareMonitorView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
                <views:SettingsView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>

