<Window x:Class="WpfDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDesktop"
        xmlns:viewmodels="clr-namespace:WpfDesktop.ViewModels"
        xmlns:views="clr-namespace:WpfDesktop.Views"
        mc:Ignorable="d"
        Title="{Binding AppTitle}" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Closing="MainWindow_OnClosing"
        Background="#050505">

    <!-- 在 Window 级别定义 DataTemplate -->
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ConfigurationViewModel}">
            <views:ConfigurationView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:VersionManagerViewModel}">
            <views:VersionManagerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ProfileManagerViewModel}">
            <views:ProfileManagerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ProcessMonitorViewModel}">
            <views:ProcessMonitorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:HardwareMonitorViewModel}">
            <views:HardwareMonitorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                Background="#0A0A0A"
                BorderBrush="#2A2A2A"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Navigation -->
                <StackPanel Grid.Row="1" Margin="10,0">
                    <RadioButton Content="首页" Tag="&#xE768;" Command="{Binding NavigateCommand}" CommandParameter="Dashboard" GroupName="NavGroup" IsChecked="True" Style="{DynamicResource NavRadioButtonStyle}"/>
                    <RadioButton Content="参数" Tag="&#xE9E9;" Command="{Binding NavigateCommand}" CommandParameter="Configuration" GroupName="NavGroup" Style="{DynamicResource NavRadioButtonStyle}"/>
                    <RadioButton Content="版本" Tag="&#xE81C;" Command="{Binding NavigateCommand}" CommandParameter="VersionManager" GroupName="NavGroup" Style="{DynamicResource NavRadioButtonStyle}"/>
                    <RadioButton Content="配置" Tag="&#xE7C3;" Command="{Binding NavigateCommand}" CommandParameter="ProfileManager" GroupName="NavGroup" Style="{DynamicResource NavRadioButtonStyle}"/>
                    <RadioButton Content="控制台" Tag="&#xE756;" Command="{Binding NavigateCommand}" CommandParameter="ProcessMonitor" GroupName="NavGroup" Style="{DynamicResource NavRadioButtonStyle}"/>
                    <RadioButton Content="监控" Tag="&#xE9D2;" Command="{Binding NavigateCommand}" CommandParameter="HardwareMonitor" GroupName="NavGroup" Style="{DynamicResource NavRadioButtonStyle}"/>
                </StackPanel>

                <!-- Bottom Sidebar -->
                <StackPanel Grid.Row="2" Margin="10,0,10,20">
                     <RadioButton Content="设置" Tag="&#xE713;" Command="{Binding NavigateCommand}" CommandParameter="Settings" GroupName="NavGroup" Style="{DynamicResource NavRadioButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Top Bar -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Status Bar -->
            </Grid.RowDefinitions>

            <!-- Top Toolbar -->
            <Border Grid.Row="0" Padding="20,15" Background="#141414" BorderBrush="#2A2A2A" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo -->
                    <StackPanel Grid.Column="0" Margin="0,0,30,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                            <TextBlock Text="ComfyUI" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="LAUNCHER" FontSize="10" FontWeight="SemiBold" Opacity="0.6" Margin="4,0,0,2" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Left: Status Indicator -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border CornerRadius="4" Padding="12,6" Background="#2A2A2A" Margin="0,0,15,0">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#808080"/> <!-- Default Gray -->
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                    <Setter Property="Fill" Value="#4CAF50"/> <!-- Green when running -->
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="{Binding ProcessStatusText}" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Status Message -->
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="{DynamicResource AccentBrush}"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="400"/>
                    </StackPanel>

                    <!-- Right: Action Buttons -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button Command="{Binding OpenWebPageCommand}"
                                Content="打开"
                                Margin="0,0,10,0"
                                Style="{DynamicResource SecondaryButtonStyle}"/>
                        <Button Command="{Binding ToggleProcessCommand}"
                                Margin="0,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                    <Setter Property="Content" Value="启动"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                            <Setter Property="Content" Value="停止"/>
                                            <Setter Property="Background" Value="#DC3545"/> <!-- Red -->
                                            <!-- Hover Red -->
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                Background="#DC3545"
                                                                BorderThickness="0"
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#E04555"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#C82333"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="0"/>

            <!-- Status Bar -->
            <Border Grid.Row="2" Padding="16,8"
                    Background="#0A0A0A">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="状态: 就绪" VerticalAlignment="Center" FontSize="12"/>
                        <!-- Last Log Line -->
                        <TextBlock Text="{Binding LastLogLine}"
                                   Foreground="#808080"
                                   FontFamily="Consolas, Courier New, Monospace"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="20,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding LastLogLine}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                         <TextBlock Text="v1.0.0" Opacity="0.6" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
